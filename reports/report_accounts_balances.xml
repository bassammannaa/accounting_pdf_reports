<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_accounts_balances">
        <t t-call="web.html_container">
            <t t-set="data_report_landscape" t-value="True"/>
            <t t-call="web.external_layout">
                <div class="page">
                    <h2><span t-esc="res_company.name"/>: Accounts Balances
                    </h2>
                    <table class="table table-sm table-hover table-bordered">
                        <thead>
                            <tr class="text-center small">
                                <th class="text-left">Account Type</th>
                                <th class="text-left">Currency</th>
                                <th class="text-right">Total Debit</th>
                                <th class="text-right">Total Credit</th>
                                <th class="text-right">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="doc">
                                <tr class="small">
                                    <td class="text-left small">
                                        <span t-esc="doc.account_type"/>
                                    </td>
                                    <td class="text-left small">
                                        <span t-esc="doc.account_type"/>
                                    </td>
                                    <td class="text-left small">
                                        <span t-esc="doc.currency_name"/>
                                    </td>
                                    <td class="text-left small">
                                        <span t-esc="doc.tot_debit"/>
                                    </td>
                                    <td class="text-left small">
                                        <span t-esc="doc.tot_credit"/>
                                    </td>
                                    <td class="text-left small">
                                        <span t-esc="doc.balance"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
