<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_generalledger">
        <t t-call="web.html_container">
            <t t-set="data_report_landscape" t-value="True"/>
            <t t-call="web.external_layout">
                <div class="page">
                    <h2><span t-esc="res_company.name"/>: General ledger
                    </h2>

                    <div class="row mt32">
                        <div class="col-4">
<!--                            <strong>Journals:</strong>-->
<!--                            <p t-esc="', '.join([ lt or '' for lt in print_journal ])"/>-->
                        </div>
                        <div class="col-4">
                            <strong>Display Account</strong>
                            <p>
                                <span t-if="data['display_account'] == 'all'">All accounts'</span>
                                <span t-if="data['display_account'] == 'movement'">With movements</span>
                                <span t-if="data['display_account'] == 'not_zero'">With balance not equal to zero</span>
                            </p>
                        </div>
                        <div class="col-4">
                            <strong>Target Moves:</strong>
                            <p t-if="data['target_move'] == 'all'">All Entries</p>
                            <p t-if="data['target_move'] == 'posted'">All Posted Entries</p>
                        </div>
                    </div>
                    <div class="row mb32">
                        <div class="col-4">
                            <strong>Sorted By:</strong>
                            <p t-if="data['sortby'] == 'sort_date'">Date</p>
                            <p t-if="data['sortby'] == 'sort_journal_partner'">Journal and Partner</p>
                        </div>
                        <div class="col-4">
                            <t t-if="data['date_from']">
                                <strong>Date from :</strong>
                                <span t-esc="data['date_from']"/>
                                <br/>
                            </t>
                            <t t-if="data['date_to']">
                                <strong>Date to :</strong>
                                <span t-esc="data['date_to']"/>
                            </t>
                        </div>
                    </div>

                    <table class="table table-sm table-hover table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th class="text-left">Date</th>
                                <th class="text-left">JRNL</th>
                                <th class="text-left">Partner</th>
                                <th class="text-left">Ref</th>
                                <th class="text-left">Move</th>
                                <th class="text-left">Entry Label</th>
                                <th class="text-right">Debit (KWD)</th>
                                <th class="text-right">Credit (KWD)</th>
                                <th class="text-right">Balance (KWD)</th>
                                <th groups="base.group_multi_currency">Currency (USD)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="Accounts" t-as="account">
                                <tr style="font-weight: bold;">
                                    <td colspan="6">
                                        <span t-esc="account['code']"/>
                                        <span t-esc="account['name']"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.3f}'.format(account['debit'])"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.3f}'.format(account['credit'])"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.3f}'.format(account['balance'])"/>
                                    </td>
                                    <td groups="base.group_multi_currency"/>
                                </tr>
                                <tr t-foreach="account['move_lines']" t-as="line">
                                    <td class="text-left">
                                        <span t-esc="line['ldate']"/>
                                    </td>
                                    <td>
                                        <span class="text-left" t-esc="line['lcode']"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="line['partner_name']"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-if="line['lref']" t-esc="line['lref']"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="line['move_name']"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="line['lname']"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.3f}'.format(line['debit'])"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.3f}'.format(line['credit'])"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.3f}'.format(line['balance'])"/>
                                    </td>
                                    <td class="text-right" groups="base.group_multi_currency">
                                        <span t-esc="'{:,.2f}'.format(line['amount_currency']) if line['amount_currency'] > 0.00 else ''"/>
                                        <span t-esc="line['currency_code'] if line['amount_currency'] > 0.00 else ''"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
